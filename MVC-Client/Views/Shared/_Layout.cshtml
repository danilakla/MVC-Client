<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_Client</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_Client.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/notification.css" asp-append-version="true" />
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>

    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/material-design-icons/3.0.1/iconfont/material-icons.min.css'>

    <link rel="stylesheet" href="~/css/chat.css" />

    @RenderSection("Styles", required: false)

</head>
<body>
  
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar fixed-top bg-body-tertiary">
            <div class="container justify-content-end" >
                <a class="navbar-brand" href="/Contact/Index">Contacts</a>
                <a class="navbar-brand" href="/Notification/Index">Notifications</a>

                <a class="navbar-brand" href="/Profile/Index">Profile</a>
                <a class="navbar-brand" href="/Chat/Index">Chat</a>

            </div>
        </nav>
    }
    else
    {
         <nav class="navbar fixed-top bg-body-tertiary">
            <div class="container justify-content-end" >
                <div class="navbar-brand" href="#">Fixed top</div>

            </div>
        </nav>
    }
    <div class="container" >

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
