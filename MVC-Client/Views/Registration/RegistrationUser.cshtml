@using MVC_Client.DTO;
@model RegistrationUserDTO
@section Styles{
    <style type="text/css">
        h1 {
            margin-top: 50px;
            color: cornflowerblue
        }

        hr {
            color: blue
        }

        form {
            max-width: 400px;
        }

        .form-group {
            margin: 10px 0;
        }
    </style>

}
<h1>Registation to <br /> application</h1>
<hr />


<form asp-controller="Registration" asp-action="RegistrationUser" method="post">
    <div class="form-group">
        <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
    </div>
    <div class="form-group">
        <input asp-for="Name" type="text" class="form-control" placeholder="Name">
    </div>
    <div class="form-group">
        <input type="text" asp-for="Secondname" class="form-control" placeholder="Secondname">
    </div>

       <div class="form-group">
        <input type="text" asp-for="Token" class="form-control" placeholder="Confirm Token">
    </div>
    <hr />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
